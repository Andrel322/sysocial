{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block header %}
    <div class="page-header">
        <div class="container"> 
		    <h2>Registrar Empresa - SYSocial</h2>
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="container form-group">
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.cnpj) }}
    {{ form_row(form.email) }}
    {{ form_row(form.date) }}

    <button class="btn btn-primary btn-lg" type="submit">Registrar</button>
    <a href="{{ path('homepage') }}" class="btn btn-primary btn-lg" role="button">Voltar</a>
{{ form_end(form) }}
</div>
{% endblock %}